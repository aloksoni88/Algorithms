package com.alok.algoexpert.io.medium;

/**
 * @author Alok Soni
 *
 */
public class SingleCycleCheck {
	public static void main(String[] args) {
		int[] arr = {2, 3, 1, -4, -4, 2};
		boolean hasCycle = hasSingleCycle(arr);
		System.out.println(hasCycle);
	}
	public static boolean hasSingleCycle(int[] array) {
		if (array == null || array.length == 0) {
			return false;
		}
		boolean[] tmpArr = new boolean[array.length];
		for (int i = 0; i < array.length; i++) {
			int cycleIndex = (i + array[i]) % array.length;
			if (cycleIndex>= 0) {
				tmpArr[cycleIndex] = true;
			} else {
				cycleIndex = array.length + cycleIndex;
				tmpArr[cycleIndex] = true;
			}
		}
		for (int i = 0; i < tmpArr.length; i++) {
			if (!tmpArr[i]) {
				return false;
			}
		}
		return true;
	}
}
